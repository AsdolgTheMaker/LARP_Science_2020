<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="LARP.Science.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="913.556" Width="1167.873"
        WindowState="Maximized" WindowStyle="None">

    <TabControl x:Name="tabctrlRootNavigator" Height="auto" Width="auto">
        <TabItem x:Name="tabNavigation" Header="Navigation">
            <Grid x:Name ="NavigationPage">
                <Grid Width="215" HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button x:Name="btnNavMenuPatients" Content="Пациенты" Grid.Row="0" Click="BtnNavMenuPatients_Click" />
                    <Button x:Name="btnNavMenuJournal" Content="Операции" Grid.Row="1" Click="BtnNavMenuJournal_Click" />
                    <Button x:Name="btnNavMenuStorage" Content="Склад" Grid.Row="2" Click="BtnNavMenuStorage_Click" />
                    <Button x:Name="btnNavMenuEconomics" Content="Экономика" Grid.Row="3" Click="BtnNavMenuEconomics_Click" />
                    <Button x:Name="btnNavMenuOther" Content="Прочее" Grid.Row="4" Click="BtnNavMenuOther_Click" />
                </Grid>
            </Grid>
        </TabItem>

        <!-- Patients Page -->
        <!--  Column 1 - Menu -->
        <!--    Row 2 - To Main Menu -->
        <TabItem x:Name="tabPatients" Header="Patients">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="btnPatientsBack" Content="В главное меню" Grid.Column="0" Grid.Row="1" Click="BtnBackToNavMenu_Click"/>
                <DataGrid Name="datagridPatientsList" AutoGenerateColumns="False" Grid.Column="1" SelectionMode="Single" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Path=Name}"/>
                        <DataGridTextColumn Header="Раса" Binding="{Binding Path=GetRace}"/>
                        <DataGridTextColumn Header="Дополнительно" Binding="{Binding Path=Description}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnPatientsForward" Content="Просмотреть" Grid.Column="2" Click="BtnNavViewPatients_Click"/>
                <Button x:Name="DEBUG_btnSerializeTest" Content="Тест сериализатора"  Click="Debug_SerializerTest" Grid.Column="1" Margin="37,551,0,0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="167"/>
                <Button x:Name="DEBUG_btnDeserializeTest" Content="Тест десериализатора"  Click="Debug_DeserializerTest" Grid.Column="1" Margin="204,551,0,0" HorizontalAlignment="Left" Width="167" Height="31" VerticalAlignment="Top"/>
                <Button x:Name="DEBUG_btnClearCharacters" Content="Очистить персонажей из контроллера"  Click="Debug_ClearCharacters" Grid.Column="1" Margin="457,551,0,0" HorizontalAlignment="Left" Width="245" Height="31" VerticalAlignment="Top"/>
                <Button x:Name="DEBUG_btnCreateTestingDB" Content="Ренициализировать тестовую базу данных"  Click="Debug_ReinitializeTestingDatabase" Grid.Column="1" Margin="702,551,0,0" HorizontalAlignment="Left" Width="245" Height="31" VerticalAlignment="Top"/>
            </Grid>
        </TabItem>

        <!-- View Patient -->
        <TabItem x:Name="tabPatientView" Header="Patient View" >
            <Grid Background="#FFE5E5E5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="127*"/>
                    <RowDefinition Height="163*"/>
                    <RowDefinition Height="279*"/>
                    <RowDefinition Height="309*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="225*"/>
                    <ColumnDefinition Width="106*"/>
                    <ColumnDefinition Width="251*"/>
                    <ColumnDefinition Width="535*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnViewPatientBack" Content="Назад" Grid.Column="0" Click="BtnNavMenuPatients_Click" Grid.RowSpan="4"/>
                <Viewbox Grid.Column="4" Margin="0,-1,-1,248" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="4">
                    <Canvas Width="853" Height="956">
                        <Image Canvas.Top="502" Stretch="Uniform" x:Name="imgPatientViewLegLeft" Height="396" Width="150" Source="/Resources/Bodies/Human/Male/LeftLeg.png" Canvas.Left="420"/>
                        <Image Canvas.Top="491" Stretch="Uniform" x:Name="imgPatientViewLegRight" Height="408" Width="151" Source="/Resources/Bodies/Human/Male/RightLeg.png" Canvas.Left="315"/>
                        <Image Canvas.Top="170" Stretch="Uniform" x:Name="imgPatientViewBody" Height="397" Width="220" Source="/Resources/Bodies/Human/Male/Body.png" Canvas.Left="327"/>
                        <Image Canvas.Top="104" Stretch="Uniform" x:Name="imgPatientViewHead" Width="81" Source="/Resources/Bodies/Human/Male/Head.png" Height="114" Canvas.Left="391"/>
                        <Image Canvas.Top="209" Stretch="Uniform" x:Name="imgPatientViewArmRight" Height="116" Width="333" Source="/Resources/Bodies/Human/Male/RightArm.png" Canvas.Left="40"/>
                        <Image Canvas.Top="214" Stretch="Uniform" x:Name="imgPatientViewArmLeft" Height="109" Width="315" Source="/Resources/Bodies/Human/Male/LeftArm.png" Canvas.Left="504"/>
                        <Image Canvas.Top="103" Stretch="Uniform" x:Name="imgPatientViewBrain" Height="48" Width="55" Source="/Resources/Bodies/Human/Male/Brain.png" Canvas.Left="404"/>
                        <Image Canvas.Top="245" Stretch="Uniform" x:Name="imgPatientViewBreath" Height="124" Width="135" Source="/Resources/Bodies/Human/Male/Breath.png" Canvas.Left="368"/>
                        <Image Canvas.Top="248" Stretch="Uniform" x:Name="imgPatientViewHeart" Height="59" Width="51" Source="/Resources/Bodies/Human/Male/Heart.png" Canvas.Left="461"/>
                        <Image Canvas.Top="366" Stretch="Uniform" x:Name="imgPatientViewLiver" Height="50" Width="79" Source="/Resources/Bodies/Human/Male/Liver.png" Canvas.Left="374"/>
                        <Image Canvas.Top="202" Stretch="Uniform" x:Name="imgPatientViewStomach" Height="288" Width="73" Source="/Resources/Bodies/Human/Male/Stomach.png" Canvas.Left="417"/>
                        <Image Canvas.Top="432" Stretch="Uniform" x:Name="imgPatientViewIntestines" Height="94" Width="108" Source="/Resources/Bodies/Human/Male/Intestines.png" Canvas.Left="381"/>
                        <Image Canvas.Top="504" Stretch="Uniform" x:Name="imgPatientViewBladder" Height="37" Width="46" Source="/Resources/Bodies/Human/Male/Bladder.png" Canvas.Left="416"/>
                        <Image Canvas.Top="494" Stretch="Uniform" x:Name="imgPatientViewReproduction" Height="71" Width="66" Grid.Column="1" Source="/Resources/Bodies/Human/Male/Reproduction.png" Canvas.Left="407"/>
                        <Image Canvas.Top="417" Stretch="Uniform" x:Name="imgPatientViewKidneys" Height="65" Width="165" Grid.Column="1" Source="/Resources/Bodies/Human/Male/Kidneys.png" Canvas.Left="354"/>
                        <Image Canvas.Top="355" Stretch="Uniform" x:Name="imgPatientViewSpleen" Height="26" Width="25" Source="/Resources/Bodies/Human/Male/Spleen.png" Canvas.Left="476"/>
                    </Canvas>
                </Viewbox>
                <GroupBox Grid.Column="1" Header="Орган" Margin="10,10,0,0" Grid.RowSpan="2"/>
                <GroupBox Grid.Column="2" Header="Пациент" Margin="10,10,1,0" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="56*"/>
                            <ColumnDefinition Width="111*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left" Margin="4,5,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Height="16" Width="28"/>
                        <TextBlock HorizontalAlignment="Left" Margin="4,26,0,0" TextWrapping="Wrap" Text="Раса" VerticalAlignment="Top" Height="16" Width="29"/>
                        <TextBlock HorizontalAlignment="Left" Margin="4,47,0,0" TextWrapping="Wrap" Text="Пол" VerticalAlignment="Top" Height="16" Width="22"/>
                        <TextBlock Margin="9,0,119,0" TextWrapping="Wrap" Text="Дополнительно" VerticalAlignment="Top" Height="16" Grid.Column="1"/>
                        <TextBlock x:Name="textblockPatientDescr" Margin="10,16,0,0" TextWrapping="Wrap" Text="DESCRIPTIONTEXT" Grid.Column="1"/>
                        <TextBlock x:Name="textblockPatientName" Margin="37,5,0,0" TextWrapping="Wrap" Text="NAMETEXT" VerticalAlignment="Top" Height="16"/>
                        <TextBlock x:Name="textblockPatientRace" Margin="37,26,0,0" TextWrapping="Wrap" Text="RACETEXT" VerticalAlignment="Top" Height="16"/>
                        <TextBlock x:Name="textblockPatientGender" Margin="37,47,0,0" TextWrapping="Wrap" Text="GENDERTEXT" Height="16" VerticalAlignment="Top"/>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="2" Header="Аугментация органа" Margin="0,0,0,2" Grid.ColumnSpan="2" Grid.Row="1"/>
                <GroupBox Grid.Column="1" Header="Неотображаемые импланты" Margin="10,0,0,0" Grid.ColumnSpan="2" Grid.Row="2">
                    <ListBox HorizontalAlignment="Left" Height="253" Margin="0,0,-2,0" VerticalAlignment="Top" Width="311"/>
                </GroupBox>
                <GroupBox Grid.Column="3" Header="Аугментация импланта" Grid.Row="2"/>
            </Grid>
        </TabItem>

        <!-- Journal Page -->
        <TabItem x:Name="tabJournal" Header="Journal">
            <Grid Background="#FFE5E5E5">
                <Button x:Name="btnJournalBack" Content="В главное меню" Grid.Row="0" Click="BtnBackToNavMenu_Click"/>
            </Grid>
        </TabItem>

        <!-- Storage Page -->
        <TabItem x:Name="tabStorage" Header="Storage">
            <Grid Background="#FFE5E5E5">
                <Button x:Name="btnStorageBack" Content="В главное меню" Grid.Row="0" Click="BtnBackToNavMenu_Click"/>
            </Grid>
        </TabItem>

        <!-- Economics Page -->
        <TabItem x:Name="tabEconomics" Header="Economics">
            <Grid Background="#FFE5E5E5">
                <Button x:Name="btnEconomicsBack" Content="В главное меню" Grid.Row="0" Click="BtnBackToNavMenu_Click"/>
            </Grid>
        </TabItem>

        <!-- Other Page -->
        <TabItem x:Name="tabOther" Header="Other">
            <Grid Background="#FFE5E5E5">
                <Button x:Name="btnOtherBack" Content="В главное меню" Grid.Row="0" Click="BtnBackToNavMenu_Click"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
