<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="LARP.Science.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        WindowState="Maximized" WindowStyle="None" Background="#FF260638">
    <Window.Resources>
        <ControlTemplate x:Key="NavigationButton" TargetType="{x:Type Button}">
            <Border Name="Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                <Border.Background>
                    <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/30x30.png"/>
                </Border.Background>
                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{TemplateBinding Padding}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/30x30_Hover.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/30x30_Click.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="NavButtonDir" TargetType="Button">
            <Border Name="Border" BorderBrush="Transparent" BorderThickness="{TemplateBinding BorderThickness}">
                <Border.Background>
                    <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButtonDir.png"/>
                </Border.Background>
                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{TemplateBinding Padding}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButtonDir_Hover.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButtonDir_Click.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsEnabled" Value="False">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButtonDir_Hover.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="NavButtonDirInv" TargetType="Button">
            <Border Name="Border" BorderBrush="Transparent" BorderThickness="{TemplateBinding BorderThickness}">
                <Border.Background>
                    <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButtonDirInv.png"/>
                </Border.Background>
                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{TemplateBinding Padding}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButtonDirInv_Hover.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButtonDirInv_Click.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsEnabled" Value="False">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButtonDirInv_Hover.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="LongButton" TargetType="Button">
            <Border Name="Border" BorderBrush="Transparent" BorderThickness="{TemplateBinding BorderThickness}">
                <Border.Background>
                    <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/LongButton.png"/>
                </Border.Background>
                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{TemplateBinding Padding}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/LongButton_Hover.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/LongButton_Click.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsEnabled" Value="False">
                    <Setter TargetName="Border" Property="Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/LongButton_Hover.png"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <TabControl x:Name="tabctrlRootNavigator" Height="auto" Width="auto" BorderBrush="Transparent">
        <TabControl.Background>
            <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/FixedSize/1920x1080.png" Stretch="UniformToFill"/>
        </TabControl.Background>
        <TabItem x:Name="tabNavigation" Header="Navigation">
            <Grid x:Name ="NavigationPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="310*"/>
                    <ColumnDefinition Width="241*"/>
                    <ColumnDefinition Width="241*"/>
                    <ColumnDefinition Width="241*"/>
                    <ColumnDefinition Width="241*"/>
                    <ColumnDefinition Width="310*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="319*"/>
                    <RowDefinition Height="241*"/>
                    <RowDefinition Height="319*"/>
                </Grid.RowDefinitions>
                <Button x:Name="btnNavMenuPatients" Click="BtnNavMenuPatients_Click"  Grid.Column="1" Grid.Row="1" Focusable="False" Template="{StaticResource NavigationButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButton.png"/>
                    </Button.Background>
                    <Button.Content>
                        <TextBlock Text="Пациенты" TextAlignment="Center" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="22" Margin="0,126,0,128" Background="#99000000" Foreground="#FF8ED0F5" />
                    </Button.Content>
                </Button>
                <Button x:Name="btnNavMenuJournal" Click="BtnNavMenuJournal_Click" Grid.Column="2" Grid.Row="1" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="22" Template="{StaticResource NavigationButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButton.png"/>
                    </Button.Background>
                    <Button.Content>
                        <TextBlock Text="Журнал" TextAlignment="Center" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="22" Margin="0,126,0,128" Background="#99000000" Foreground="#FF8ED0F5" />
                    </Button.Content>
                </Button>
                <Button x:Name="btnNavMenuStorage" Click="BtnNavMenuStorage_Click" Grid.Column="3" Grid.Row="1" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="22" Template="{StaticResource NavigationButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButton.png"/>
                    </Button.Background>
                    <Button.Content>
                        <TextBlock Text="Склад" TextAlignment="Center" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="22" Margin="0,126,0,128" Background="#99000000" Foreground="#FF8ED0F5" />
                    </Button.Content>
                </Button>
                <Button x:Name="btnNavMenuEconomics" Click="BtnNavMenuEconomics_Click" Grid.Column="4" Grid.Row="1" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="22" Template="{StaticResource NavigationButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/NavButton.png"/>
                    </Button.Background>
                    <Button.Content>
                        <TextBlock Text="Экономика" TextAlignment="Center" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="22" Margin="0,126,0,128" Background="#99000000" Foreground="#FF8ED0F5" />
                    </Button.Content>
                </Button>
                <Button x:Name="Logout" HorizontalAlignment="Left" Margin="0,345,0,0" Grid.Row="2" VerticalAlignment="Top" Width="457" Height="34" Template="{StaticResource LongButton}" Grid.ColumnSpan="2" Click="Logout_Click">
                    <TextBlock Text="Сменить учетную запись" TextAlignment="Center" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="14" Background="Transparent" Foreground="#FF8ED0F5" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button x:Name="Adminka" Content="АДМИНКА" Grid.Column="5" HorizontalAlignment="Left" Margin="298,359,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Adminka_Click"/>
            </Grid>
        </TabItem>

        <!-- Patients Page -->
        <TabItem x:Name="tabPatients" Header="Patients" BorderBrush="Transparent">
            <Grid>
                <Grid.Background>
                    <ImageBrush ImageSource="/LARP.Science;component/Resources/Interface/FixedSize/1920x1080.png" Stretch="UniformToFill"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="199"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="199"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="btnPatientsBack" Grid.Column="0" Grid.Row="1" Click="BtnBackToNavMenu_Click" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)"
                        Template="{StaticResource NavButtonDir}"/>
                <DataGrid Name="datagridPatientsList" AutoGenerateColumns="False" Grid.Column="1" SelectionMode="Single" IsReadOnly="True" FontFamily="Lucida Console" Foreground="#FF191532" Margin="0,85,0,84" Background="#CD04161F">
                    <DataGrid.BorderBrush>
                        <SolidColorBrush Opacity="75" Color="AliceBlue"/>
                    </DataGrid.BorderBrush>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#367498"/>
                            <Setter Property="Foreground" Value="LightCyan"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="LightBlue"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="DataGridCell.IsFocused" Value="true">
                                    <Setter Property="Background" Value="Azure"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="DataGridRow.IsFocused" Value="true">
                                    <Setter Property="Background" Value="Azure"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn MinWidth="40" Header="ID" Binding="{Binding Path=ID}" Foreground="Black"/>
                        <DataGridTextColumn MinWidth="340" Header="Имя" Binding="{Binding Path=Name}"/>
                        <DataGridTextColumn MinWidth="120" Header="Раса" Binding="{Binding Path=GetRace}"/>
                        <DataGridTextColumn Header="Дополнительно" Binding="{Binding Path=Description}" Width="*"/>
                    </DataGrid.Columns>
                    <ListBoxItem/>
                </DataGrid>
                <Button x:Name="btnPatientsForward" Grid.Column="2" Click="BtnNavViewPatients_Click" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)"
                        Template="{StaticResource NavButtonDirInv}" />
                <Button x:Name="DEBUG_btnSerializeTest" Content="Тест сериализатора"  Click="Debug_SerializerTest" Grid.Column="1" Margin="13,1003,0,0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="167"/>
                <Button x:Name="DEBUG_btnDeserializeTest" Content="Тест десериализатора"  Click="Debug_DeserializerTest" Grid.Column="1" Margin="180,1003,0,0" HorizontalAlignment="Left" Width="167" Height="31" VerticalAlignment="Top"/>
                <Button x:Name="DEBUG_btnClearCharacters" Content="Очистить персонажей из контроллера"  Click="Debug_ClearCharacters" Grid.Column="1" Margin="433,1003,0,0" HorizontalAlignment="Left" Width="245" Height="31" VerticalAlignment="Top"/>
                <Button x:Name="DEBUG_btnCreateTestingDB" Content="Ренициализировать тестовую базу данных"  Click="Debug_ReinitializeTestingDatabase" Grid.Column="1" Margin="678,1003,0,0" HorizontalAlignment="Left" Width="245" Height="31" VerticalAlignment="Top"/>
            </Grid>
        </TabItem>

        <!-- View Patient Page-->
        <TabItem x:Name="tabPatientView" Header="Patient View" BorderBrush="Transparent">
            <Grid>
                <Grid.Background>
                    <ImageBrush/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="151*"/>
                    <RowDefinition Height="214*"/>
                    <RowDefinition Height="370*"/>
                    <RowDefinition Height="309*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="199"/>
                    <ColumnDefinition Width="363*"/>
                    <ColumnDefinition Width="527*"/>
                    <ColumnDefinition Width="817*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnViewPatientBack" Content="Назад" Grid.Column="0" Click="BtnNavMenuPatients_Click" Grid.RowSpan="4"
                        Template="{StaticResource NavButtonDir}"/>
                <GroupBox Grid.Column="3" Margin="0,10,0,0" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="10" Background="#FFA2C4D1">
                    <GroupBox.Header>
                        <TextBlock Text="Журнал" Background="#CC000000" Foreground="#FF99ECFF"/>
                    </GroupBox.Header>
                    <TextBox x:Name="TextBoxPatientViewJournal" IsReadOnly="True" IsReadOnlyCaretVisible="False" Foreground="#FF899AA4" TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                             Text="" Background="#FF041425" FontFamily="Lucida Console" FontSize="12"/>
                </GroupBox>
                <Viewbox Grid.Column="3" Margin="10,-1,-1,10" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="4">
                    <Canvas Width="897" Height="963">
                        <Image Canvas.Top="502" Stretch="Uniform" x:Name="imgPatientViewLegLeft" Height="396" Width="150" Source="/Resources/Bodies/Human/Male/LeftLeg.png" Canvas.Left="420" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="491" Stretch="Uniform" x:Name="imgPatientViewLegRight" Height="408" Width="148" Source="/Resources/Bodies/Human/Male/RightLeg.png" Canvas.Left="318" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="170" Stretch="Uniform" x:Name="imgPatientViewBody" Height="397" Width="220" Source="/Resources/Bodies/Human/Male/Body.png" Canvas.Left="327" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="103" Stretch="Uniform" x:Name="imgPatientViewHead" Width="81" Source="/Resources/Bodies/Human/Male/Head.png" Height="114" Canvas.Left="393" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="170" Stretch="Uniform" x:Name="imgPatientViewStomach" Height="281" Width="73" Source="/Resources/Bodies/Human/Male/Stomach.png" Canvas.Left="420" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="209" Stretch="Uniform" x:Name="imgPatientViewArmRight" Height="116" Width="333" Source="/Resources/Bodies/Human/Male/RightArm.png" Canvas.Left="40" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="217" Stretch="Uniform" x:Name="imgPatientViewArmLeft" Height="109" Width="315" Source="/Resources/Bodies/Human/Male/LeftArm.png" Canvas.Left="501" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="103" Stretch="Uniform" x:Name="imgPatientViewBrain" Height="48" Width="55" Source="/Resources/Bodies/Human/Male/Brain.png" Canvas.Left="404" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="249" Stretch="Uniform" x:Name="imgPatientViewBreath" Height="124" Width="135" Source="/Resources/Bodies/Human/Male/Breath.png" Canvas.Left="366" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="343" Stretch="Uniform" x:Name="imgPatientViewLiver" Height="50" Width="79" Source="/Resources/Bodies/Human/Male/Liver.png" Canvas.Left="383" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="271" Stretch="Uniform" x:Name="imgPatientViewHeart" Height="72" Width="72" Source="/Resources/Bodies/Human/Male/Heart.png" Canvas.Left="414" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="398" Stretch="Uniform" x:Name="imgPatientViewIntestines" Height="106" Width="108" Source="/Resources/Bodies/Human/Male/Intestines.png" Canvas.Left="385" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="481" Stretch="Uniform" x:Name="imgPatientViewBladder" Height="30" Width="46" Source="/Resources/Bodies/Human/Male/Bladder.png" Canvas.Left="416" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="481" Stretch="Uniform" x:Name="imgPatientViewReproduction" Height="84" Width="90" Grid.Column="1" Source="/Resources/Bodies/Human/Male/Reproduction.png" Canvas.Left="396" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="393" Stretch="Uniform" x:Name="imgPatientViewSpleen" Height="26" Width="25" Source="/Resources/Bodies/Human/Male/Spleen.png" Canvas.Left="476" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                        <Image Canvas.Top="373" Stretch="Uniform" x:Name="imgPatientViewKidneys" Height="46" Width="144" Grid.Column="1" Source="/Resources/Bodies/Human/Male/Kidneys.png" Canvas.Left="366" MouseEnter="PatientImageMouseEnter" MouseLeave="PatientImageMouseLeave" MouseDown="OrganClick"/>
                    </Canvas>
                </Viewbox>
                <GroupBox Grid.Column="1" Margin="10,10,0,160" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="10" Background="#FFA2C4D1" Grid.RowSpan="2">
                    <GroupBox.Header>
                        <TextBlock Text="Орган" Background="#CC000000" Foreground="#FF99ECFF"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="27*"/>
                            <RowDefinition Height="230*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Margin="4,3,0,0" TextWrapping="Wrap" Text="Описание" VerticalAlignment="Top" Height="18" HorizontalAlignment="Left" Width="107" Grid.Row="1" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="10"/>
                        <TextBlock x:Name="textblockPatientOrganName" Margin="10,5,10,0" TextWrapping="Wrap" Text="NAMETEXT" VerticalAlignment="Top" Height="16" FontFamily="Lucida Console" FontSize="12"/>
                        <TextBlock x:Name="textblockPatientOrganDescription" Margin="10,21,10,10" TextWrapping="Wrap" Grid.Row="1" Text="DESCRIPTIONTEXT" FontFamily="Lucida Console" FontSize="12"/>
                        <Button x:Name="ButtonPatientViewInstallOrgan" Margin="142,0,0,139" Template="{StaticResource LongButton}" Grid.RowSpan="2" Click="ButtonPatientViewInstallOrgan_Click">
                            <Button.Content>
                                <TextBlock TextWrapping="Wrap" Text="Орган отсутствует Установить?" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)"  Foreground="#FF5FABEA" VerticalAlignment="Center" TextAlignment="Center"/>
                            </Button.Content>
                        </Button>
                        <TextBlock x:Name="textblockPatientOrganAugmentNotifier" Margin="0,0,0,4" TextWrapping="Wrap" Text="Аугментирован!" Grid.Row="1" Height="14" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="181" Foreground="Red"/>
                        <Rectangle x:Name="rectanglePatientOrgan" Fill="#FF5C7A8B" Stroke="Black" Grid.RowSpan="2" Visibility="Collapsed"/>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="2" Margin="0,10,1,160" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="10" Background="#FFA2C4D1" Grid.RowSpan="2">
                    <GroupBox.Header>
                        <TextBlock Text="Пациент" Background="#CC000000" Foreground="#FF99ECFF"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="56*"/>
                            <ColumnDefinition Width="111*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left" Margin="4,5,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Height="16" Width="43" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="8"/>
                        <TextBlock HorizontalAlignment="Left" Margin="4,26,0,0" TextWrapping="Wrap" Text="Раса" VerticalAlignment="Top" Height="16" Width="45" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="8"/>
                        <TextBlock HorizontalAlignment="Left" Margin="4,47,0,0" TextWrapping="Wrap" Text="Пол" VerticalAlignment="Top" Height="16" Width="34" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="8"/>
                        <TextBlock Margin="20,0,10,0" TextWrapping="Wrap" Text="Дополнительно" VerticalAlignment="Top" Height="16" Grid.Column="1" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="10"/>
                        <TextBlock x:Name="textblockPatientDescr" Margin="10,16,10,10" TextWrapping="Wrap" Text="DESCRIPTIONTEXT" Grid.Column="1" FontFamily="Lucida Console" FontSize="12"/>
                        <TextBlock x:Name="textblockPatientName" Margin="52,5,0,0" TextWrapping="Wrap" Text="NAMETEXT" VerticalAlignment="Top" Height="16" FontFamily="Lucida Console" FontSize="12"/>
                        <TextBlock x:Name="textblockPatientRace" Margin="52,26,0,0" TextWrapping="Wrap" Text="RACETEXT" VerticalAlignment="Top" Height="16" FontFamily="Lucida Console" FontSize="12"/>
                        <TextBlock x:Name="textblockPatientGender" Margin="52,47,0,0" TextWrapping="Wrap" Text="GENDERTEXT" Height="16" VerticalAlignment="Top" FontFamily="Lucida Console" FontSize="12"/>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="10" Background="#FFA2C4D1" Margin="10,54,0,0">
                    <GroupBox.Header>
                        <TextBlock Text="Аугментация   органа" Background="#CC000000" Foreground="#FF99ECFF"/>
                    </GroupBox.Header>
                    <Grid Background="#FFA2C4D1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="146*"/>
                            <ColumnDefinition Width="141*"/>
                            <ColumnDefinition Width="581*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38*"/>
                            <RowDefinition Height="28*"/>
                            <RowDefinition Height="69*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="textblockPatientOrganAugDescription" Margin="5,21,5,10" TextWrapping="Wrap" Text="DESCRIPTIONTEXT" Grid.Row="2" Grid.ColumnSpan="2" FontFamily="Lucida Console" FontSize="12"/>
                        <TextBlock Margin="5,0,0,0" TextWrapping="Wrap" Grid.Row="2" Height="21" VerticalAlignment="Top" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="8"><Run Text="Описание"/><LineBreak/><Run/></TextBlock>
                        <TextBlock Margin="5,3,0,0" TextWrapping="Wrap" Text="Название" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="8"/>
                        <TextBlock Margin="5,7,0,0" TextWrapping="Wrap" Text="Тип" Grid.Row="1" FontFamily="/LARP.Science;component/Resources/#NFSCarbon(FONT BY LYAJKA)" FontSize="8"/>
                        <TextBlock x:Name="textblockPatientOrganAugName" Margin="10,3,10,0" TextWrapping="Wrap" Text="NAMETEXT" Grid.Column="1" FontFamily="Lucida Console" FontSize="12"/>
                        <TextBlock x:Name="textblockPatientOrganAugSlotType" Margin="10,7,10,0" TextWrapping="Wrap" Text="SLOTTYPE" Grid.Column="1" Grid.Row="1" FontFamily="Lucida Console" FontSize="12"/>
                        <DataGrid x:Name="datagridPatientOrganAugParams" Grid.Column="2" Grid.RowSpan="3" SelectionMode="Single" IsReadOnly="True" FontFamily="Lucida Console" FontSize="14" Foreground="#FF191532" Background="#FF5C7A8B">
